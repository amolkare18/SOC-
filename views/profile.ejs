        <button class="btn btn-primary" style="position:relative;bottom:160px;left:650px;">edit profile</button>

    </form>
    <form action="/profile/<%= user._id %>/addpost" method="GET">
        <button class="my-3 btn btn-primary"style="position:relative;bottom:210px;left:850px;">add post</button>
    </form>
   <form action="/posts">
    <button class="btn btn-primary" style="position:relative;bottom:270px;left:500px;">home</button>
   </form>
   <form action="/login/accounts" method="GET">
    <button class="btn btn-primary" style="position:relative;bottom:300px;left:1030px;">accounts</button>

</form>
<form action="/logout" method="GET">
    <button class="btn btn-danger" style="position:relative;bottom:340px;left:1200px;">logout</button>

</form>



   
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
